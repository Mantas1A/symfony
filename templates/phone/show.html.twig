{% extends 'base.html.twig' %}

{% block title %}Phone{% endblock %}

{% block body %}
    <h1>Phone</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ phone.id }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ phone.phoneNumber }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ phone.userId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ phone.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('phone_index') }}">back to list</a>
{% if app.user.id == phone.userId %}
    <a href="{{ path('phone_edit', {'id': phone.id}) }}">edit</a>
{% endif %}

